<% if @goss.errors.any? %>
   <% @goss.errors.full_messages.each do |message| %>
  <div class="alert alert-danger" role="alert">
  <li><%= message %></li>
  </div>
    <% end %>
<% end %>

    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @goss.title, class: "form-control" %>
      <br />

      <%= label_tag 'Body' %>
      <%= text_area_tag 'content', @goss.content, class: "form-control"  %>
      <br /> <br />


      <%= submit_tag "Create Gossip" %>

    <% end %>