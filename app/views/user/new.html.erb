<div class="container-fluid">
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-8">


    <%= form_tag url_for(action: 'create'), method: "post" do %>

<form>
  <div class="row">
    <div class="col">
          <%= label_tag 'Nom' %>

      <%= text_field_tag 'first_name', "", class: "form-control" %>
    </div>
    <div class="col">
          <%= label_tag 'Prenom' %>

      <%= text_field_tag 'last_name', "", class: "form-control" %>
    </div>
  </div>
    <div class="row">
    <div class="col">
          <%= label_tag 'Email' %>

      <%= text_field_tag 'email', "", class: "form-control" %>
    </div>

  </div>
  <div class= "row">
      <div class="col">
          <%= label_tag 'Mot de passe' %>

      <%= text_field_tag 'password', "", class: "form-control", type: "password" %>
    </div>
          <div class="col">
          <%= label_tag 'Verifier le mot de passe' %>

      <%= text_field_tag 'confirm', "", class: "form-control", type: "password" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
              <%= label_tag 'City' %>
              <%= select_tag "city", options_from_collection_for_select(@city, "id", "name"), class: "custom-select mr-sm-2"%>
    </div>

        <div class="col">
                      <%= label_tag 'Age' %>

                            <%= select_tag "age", options_for_select(1..100),class: "custom-select mr-sm-2" %>

    </div>  
  </select>
  </div>
        <%= label_tag 'Body' %>
      <%= text_area_tag 'content', "", class: "form-control"  %>
      <br /> <br />

      <%= submit_tag "Sign up" %>
</form>

    <% end %>
		</div>
		<div class="col-md-2">
		</div>
	</div>
</div>