<div class="container-fluid">
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-8">


    <%= form_tag url_for(action: 'create'), method: "post" do %>

<form>
  <div class="row">
    <div class="col">
          <%= label_tag 'Nom' %>

      <%= text_field_tag 'first_name', "", class: "form-control" %>
    </div>
    <div class="col">
          <%= label_tag 'Prenom' %>

      <%= text_field_tag 'last_name', "", class: "form-control" %>
    </div>
  </div>
    <div class="row">
    <div class="col">
          <%= label_tag 'Email' %>

      <%= text_field_tag 'email', "", class: "form-control" %>
    </div>

  </div>
  <div class= "row">
      <div class="col">
          <%= label_tag 'Mot de passe' %>

      <%= text_field_tag 'password', "", class: "form-control" %>
    </div>
          <div class="col">
          <%= label_tag 'Verifier le mot de passe' %>

      <%= text_field_tag 'password_verif', "", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
              <%= label_tag 'City' %>

      <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
        <option selected>Choose...</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
      </select>
    </div>

        <div class="col">
                      <%= label_tag 'Age' %>

      <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
        <option selected>Choose...</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
      </select>
    </div>
  </select>
  </div>
        <%= label_tag 'Body' %>
      <%= text_area_tag 'content', "", class: "form-control"  %>
      <br /> <br />

      <%= submit_tag "Sign up" %>
</form>

    <% end %>
		</div>
		<div class="col-md-2">
		</div>
	</div>
</div>