<div class="container-fluid">
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-8">


    <%= form_tag url_for(action: 'create'), method: "post" do %>

<form>
  <div class="row">
    <div class="col">
          <%= label_tag 'Nom' %>

      <%= text_field_tag 'first_name', "", class: "form-control" %>
    </div>
    <div class="col">
          <%= label_tag 'Prenom' %>

      <%= text_field_tag 'last_name', "", class: "form-control" %>
    </div>
  </div>
    <div class="row">
    <div class="col">
          <%= label_tag 'Email' %>

      <%= text_field_tag 'email', "", class: "form-control" %>
    </div>
    <div class="col">
          <%= label_tag 'Mot de passe' %>

      <%= text_field_tag 'password', "", class: "form-control" %>
    </div>
  </div>
        <%= label_tag 'Body' %>
      <%= text_area_tag 'content', "", class: "form-control"  %>
      <br /> <br />

      <%= submit_tag "Create Post" %>
</form>

    <% end %>
		</div>
		<div class="col-md-2">
		</div>
	</div>
</div>